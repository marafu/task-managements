  "paths": {
    "/signup": {
      "post": {
        "summary": "Registro do usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Signup"
              }
            }
          },
          "examples": {
            "signup": {
              "id": "af12e08d-56e3-4ab5-8b2b-21757fa8c920"
            }
          }
        },
        "responses": {
          "400": {
            "message": "Invalid name"
          },
          "200": {
            "description": "OK",
            "message": "Signup successfully"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login do usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          },
          "examples": {
            "signup": {
              "token": "string"
            }
          }
        },
