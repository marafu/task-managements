    "/tasks": {
      "get": {
        "summary": "Listar tasks do usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GetTasks"
              }
            }
          },
          "examples": {
            "signup": {
              "token": "string"
            }
          }
        },
        "responses": {
          "400": {
            "message": "Authentication failed"
          },
          "200": {
            "description": "OK",
            "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjIwMjM2ZDAzMDI5OTVhZmU0OTBjOWRmZDY2OTNmMjIyMGZmMyIsImlhdCI6MTY5Nzg0NjkwOS44MTYsImV4cGlyZXNJbiI6MzYwMH0.IoMRsHtZVBu_3ouTyLCi0iz2ubgQCCgm2aKW7_59l-0"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Signup": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "GetTask": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
